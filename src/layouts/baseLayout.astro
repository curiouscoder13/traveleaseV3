---
import AuthBtn from "../components/authBtn.astro";
import NavBar from "../components/NavBar.tsx";
import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/travelease-2.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="main-container">
      <AuthBtn />
      <NavBar client:load />
      <slot />
    </div>
  </body><style>
    @import url("https://fonts.googleapis.com/css2?family=Nunito&display=swap");

    body {
      background-color: var(--background-color);
      color: black;
      font-family: "Nunito", sans-serif;
      margin: 0;
      width: 100vw;
      height: 100vh;

      --padding-navbar: 0.5rem;
      --padding-navbar-mobile: 0.5rem;
      --background-color: #50c878;
      --primary-color: #a6d608;
      --primary-color-hover: #9acd32;
      --animation-mobile-in: fade-in 0.3s ease-in-out forwards;
      overflow-x: hidden;
    }
    @keyframes fade-in {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    .main-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100vw;
      height: auto;
      overflow-x: hidden;
    }
  </style>
</html>
