---
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
} from "@clerk/astro/components";
---

<div class="auth-container">
  <SignedOut>
    <SignInButton mode="redirect" class="auth-button" />
  </SignedOut>
  <SignedIn>
    <div class="user-button">
      <UserButton />
    </div>
  </SignedIn>
</div>

<style>
  .auth-container {
    position: fixed;
    top: 2%;
    right: 1.25%;
    width: 5rem;
    height: 2.25rem;
    background-color: black;
    color: var(--background-color);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 25;
  }
  .auth-button {
    font-family: "Nunito", sans-serif;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 0.5rem;
    background-color: var(--background-color);
    color: black;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
  }
  .auth-button:hover {
    background-color: black;
    color: var(--background-color);
    border: 1px solid var(--background-color);
  }

  .user-button {
    position: fixed;
    top: 2.5%;
    right: 1.5%;
  }

  @media (max-width: 768px) {
    .auth-container {
      top: 1.5%;
      margin-right: 2.25rem;
      height: 2rem;
    }
    .user-button {
      top: 1.75%;
      margin-right: 2rem;
    }
  }
</style>
