---
import BaseLayout from "../layouts/baseLayout.astro";

// if button is clicked, prompt user that they have successfully submitted the form
---

<BaseLayout title="TravelEase: Contact">
  <div class="contact-container">
    <form>
      <div class="title">Contact Us</div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" placeholder="Enter your name" />
      <br />
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Enter your email"
      />
      <br />
      <label for="message">Message:</label>
      <textarea id="message" name="message" placeholder="Enter your message"
      ></textarea>
      <br />
      <button type="submit">Submit</button>
    </form>
  </div>
</BaseLayout>

<script>
  const button = document.querySelector("button");
  if (!button) throw new Error("No button element found");

  button.addEventListener("click", function () {
    alert("Thank you for your submission!");
  });
</script>

<style>
  .contact-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    width: 100vw;
    gap: 0.5rem;
  }
  .title {
    font-size: 2rem;
    font-weight: bold;
  }
  form {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    width: 320px;
    height: auto;
    padding: 1rem;
    color: black;
    border: 1px solid black;
    border-radius: 0.5rem;
  }
  form label {
    width: max-content;
    font-size: 1rem;
    font-weight: bold;
    text-align: left;
    width: 100%;
    margin-top: 1rem;
  }
  form input,
  form textarea {
    width: calc(100% - 1rem);
    padding: 0.5rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    border: 1px solid black;
    background-color: var(--background-color);
  }

  form input::placeholder,
  form textarea::placeholder {
    color: gray;
  }

  form textarea {
    height: 100px;
  }
  form button {
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    border: 1px solid black;
    background-color: black;
    color: var(--background-color);
    cursor: pointer;
    margin-top: 1rem;
  }
  form button:hover {
    background-color: var(--background-color);
    color: black;
  }
</style>
